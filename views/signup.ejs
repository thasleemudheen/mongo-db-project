<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Signup</title>
    
<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #f0f0f0;
    }
    h1 {
        text-align: center;
        margin-top: 50px;
    }
    form {
        width: 400px;
        margin: 0 auto;
        background-color: #fff;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }
    label {
        display: block;
        margin-bottom: 5px;
    }
    input[type="text"],
    input[type="email"],
    input[type="password"],
    input[type="tel"] {
        width: 100%;
        padding: 10px;
        margin-bottom: 10px;
        border: 1px solid #ccc;
        border-radius: 5px;
        box-sizing: border-box;
    }
    button[type="submit"] {
        width: 50%;
        padding: 10px;
        border: none;
        border-radius: 5px;
        background-color: #007bff;
        color: #fff;
        font-size: 16px;
        cursor: pointer;
        margin-left: 25%;
        transition: background-color 0.3s ease;
    }
    button[type="submit"]:hover {
        background-color: #0056b3;
    }
    #signupform {
        background-color: rgb(158, 154, 148);
    }
    .error-message {
        color: red;
        font-size: 12px;
    }
</style>
</head>
<body>
    <h1>Signup</h1>
    <form action="/signup" method="post" id="signupform" onsubmit="return validateForm()">
        <label for="username">Username:</label>
        <input type="text" id="username" name="username" ><br>
        <span class="error-message" id="username-error"></span>
        <label for="email">Email:</label>
        <input type="email" id="email" name="email" ><br>
        <span class="error-message" id="email-error"></span>
        <label for="password">Password:</label>
        <input type="password" id="password" name="password" ><br>
        <span class="error-message" id="password-error"></span>
        <label for="phone">Phone Number:</label>
        <input type="tel" id="phone" name="phone" ><br>
        <span class="error-message" id="phone-error"></span>
        <button type="submit">Signup</button>
    </form>

    <script>
        function validateForm() {
            var username = document.getElementById('username').value;
            var email = document.getElementById('email').value;
            var password = document.getElementById('password').value;
            var phone = document.getElementById('phone').value;

            var isValid = true;

            var usernameRegex = /^[a-zA-Z0-9]{3,20}$/;
            var emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
            var passwordRegex = /^(?=.*[a-zA-Z].*[a-zA-Z].*[a-zA-Z].*[a-zA-Z].*[a-zA-Z]).{5,}$/;
            var phoneRegex = /^\d{10}$/;

            if (!usernameRegex.test(username)) {
                displayErrorMessage('invalid user name', 'username-error');
                isValid = false;
            } else {
                hideErrorMessage('username-error');
            }

            if (!emailRegex.test(email)) {
                displayErrorMessage(' enter a valid email ', 'email-error');
                isValid = false;
            } else {
                hideErrorMessage('email-error');
            }

            if (!passwordRegex.test(password)) {
                displayErrorMessage('invalid password', 'password-error');
                isValid = false;
            } else {
                hideErrorMessage('password-error');
            }

            if (!phoneRegex.test(phone)) {
                displayErrorMessage('invalid phone number.', 'phone-error');
                isValid = false;
            } else {
                hideErrorMessage('phone-error');
            }

            return isValid;
        }

        function displayErrorMessage(message, fieldId) {
            var errorElement = document.getElementById(fieldId);
            errorElement.innerText = message;
        }

        function hideErrorMessage(fieldId) {
            var errorElement = document.getElementById(fieldId);
            errorElement.innerText = '';
        }
    </script>
</body>
</html>
